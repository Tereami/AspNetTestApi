@model RegisterUserViewModel
@{
    ViewData["Title"] = "Register";
}

<h2>Register new user</h2>
<form asp-action="Register" asp-antiforgery="true">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="@Model.Username"></label>
        <input asp-for="@Model.Username" class="form-control" />
        <span asp-validation-for="@Model.Username" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Password"></label>
        <input asp-for="@Model.Password" class="form-control" />
        <span asp-validation-for="@Model.Password" class="text-danger"></span>

        <label asp-for="@Model.PasswordConfirm"></label>
        <input asp-for="@Model.PasswordConfirm" class="form-control" />
        <span asp-validation-for="@Model.PasswordConfirm" class="text-danger"></span>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Register!</button>
    </div>
</form>
